@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.AssociationViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}


<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                @using (Html.BeginForm("AssociationSave", "Association", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.HiddenFor(x => x.Id)
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(x => x.Count)
                    </div>
                    <div class="col-lg-12">

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Dernek Adı : </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "Name", @required = "required" })
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Adres : </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", id = "Adress", @required = "required" })
                            </div>
                        </div>

                        <hr>
                     
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Dernek Resmi : </label>
                                <div class="col-sm-10">
                                    <input type="file" class="dropify" data-height="300" name="Image" />
                                </div>
                            </div>
                       
                            <hr>

                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-warning waves-effect waves-light">İptal Et</button>
                                    <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                                </div>
                            </div>


                        </div>
                }
                </div>

            

        </div>
    </div>
</div>
<!-- end row -->
