@using Strasbourg.Domain.ViewModels
@model IQueryable<AssociationViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
    
}

<!-- Start Content-->
<div class="container-fluid">

    <br />
    <!-- end page title -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                    <h2>Dernek Listesi</h2>
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Sıra</th>
                                <th>Dernek Adı</th>
                                <th>Adres</th>
                                <th>Resim</th>
                                <th style="width: 100px !important;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Adress</td>
                                    <td>@item.Image</td>
                                    <td>
                                        @Html.ActionLink("İncele", "AssociationDetail", "Association", new { id = item.Id, type = "asd" }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                        @Html.ActionLink("Düzenle", "AssociationDetail", "Association", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                        @Html.ActionLink("Sil", "AssociationDelete", "Association", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })
                                        @Html.ActionLink(" ", "AssociationUp", "Association", new { id = item.Id }, new { @class = "btn btn-dark btn-rounded width-md waves-effect waves-light fas fa-chevron-up", @style = "width:fit-content;min-width: 45px !important;" })
                                        @Html.ActionLink(" ", "AssociationDown", "Association", new { id = item.Id }, new { @class = "btn btn-dark btn-rounded width-md waves-effect waves-light fas fa-chevron-down", @style = "width:fit-content;min-width: 45px !important;" })
                                    </td>
                                </tr>
                            }
                        </tbody>
               
                    </table>
            </div>
        </div>
    </div>

</div>
<!-- end container-fluid -->
