@using Strasbourg.Domain.ViewModels
@model IQueryable<BoardViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<div class="container-fluid">

    <br />
    <!-- end page title -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h2>Denetim Kurulu</h2>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Ad Soyad</th>
                            <th>Unvan</th>
                            <th>Resim</th>
                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Degree</td>
                                <td>@item.Image</td>
                                <td>
                                    @Html.ActionLink("İncele", "BoardOfAuditorDetail", "Board", new { id = item.Id, type = "asd" }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                    @Html.ActionLink("Düzenle", "BoardOfAuditorDetail", "Board", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                    @Html.ActionLink("Sil", "BoardOfAuditorDelete", "Board", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt sa-params" })
                                    @Html.ActionLink(" ", "BoardOfAuditorUp", "Board", new { id = item.Id }, new { @class = "btn btn-dark btn-rounded width-md waves-effect waves-light fas fa-chevron-up", @style = "width:fit-content;min-width: 45px !important;" })
                                    @Html.ActionLink(" ", "BoardOfAuditorDown", "Board", new { id = item.Id }, new { @class = "btn btn-dark btn-rounded width-md waves-effect waves-light fas fa-chevron-down", @style = "width:fit-content;min-width: 45px !important;" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>


