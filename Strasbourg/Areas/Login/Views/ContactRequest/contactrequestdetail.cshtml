@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.ContactRequestsViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}


<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("Index", "ContactRequest", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {

                        <h3>İletişim İsteği Detayı</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Tarih
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.CreationDate, new { @class = "form-control", id = "Date", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Ad Soyad
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", id = "NameSurname", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Email
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "Email", @required = "required" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                   

                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Konu
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", id = "Subject", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Mesaj
                                        </button>
                                    </span>
                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", id = "Message", @required = "required" })

                                </div>
                            </div>
                        </div>
                   
                    
                            <script>
                                document.getElementById("Date").readOnly = true;
                                document.getElementById("NameSurname").readOnly = true;
                                document.getElementById("Email").readOnly = true;
                                document.getElementById("Subject").readOnly = true;
                                document.getElementById("Message").readOnly = true;
                            </script>
                        }

                  
                </div>




            </div>


        </div>

    </div>
</div>


