@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.SacrificePriceViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("SacrificeDonatePriceSave", "Donation", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {

                        <h3>Kurban Bağışı Fiyatı (1 Adet)</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary"
                                                style="width: 150px !important;">
                                            Fiyat (€)
                                        </button>
                                    </span>


                                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @required = "required"})



                                </div>
                            </div>



                        </div>
                        <br/> <br/>
                        <button type="submit" class="btn btn-success waves-effect width-md waves-light">Kaydet</button>

                    }
                </div>




            </div>


        </div>

    </div>
</div>



