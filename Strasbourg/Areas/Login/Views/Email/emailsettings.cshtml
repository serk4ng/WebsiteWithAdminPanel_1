
@model Strasbourg.Domain.ViewModels.EmailSettingsViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">

            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("EmailSettingsSave", "Email", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {

                        <h3>Email Ayarları</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>


                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 115px !important;">
                                            Kullanıcı Adı
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", id = "username", @required = "required" })

                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 115px !important;">
                                            Şifre
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", id = "password", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 115px !important;">
                                            Host
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Host, new { @class = "form-control", id = "password", @required = "required"})


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 115px !important;">
                                            Port
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Port, new { @class = "form-control", id = "password", @required = "required"})


                                </div>
                            </div>

                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 115px !important;">
                                            Mail
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", id = "password", @required = "required" })


                                </div>
                            </div>
                        </div>
                        
                        <br />
                 
                            <button type="submit" class="btn btn-success waves-effect width-md waves-light">Kaydet</button>                  
                    }
                </div>
            </div>


        </div>

    </div>
</div>
