@using Strasbourg.Domain.ViewModels
@model IQueryable<NewsCategoryViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<div class="container-fluid">

    <br />
    <!-- end page title -->


    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h2>Kategori Listesi</h2>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Dil</th>
                            <th>Kategori Adı</th>
 
                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
 
                        
                              
                                <td>@item.SiteLanguage</td>
                                <td>@item.Category</td>
                                <td>
                                  
                                    @Html.ActionLink("Düzenle", "NewsCategoryDetail", "News", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                    @Html.ActionLink("Sil", "NewsCategoryDelete", "News", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>

