@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.RelatedOrganizationViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-12">
                    <form class="form-horizontal">
                        @Html.DropDownListFor(o => o.SiteLanguage,
                     new SelectList(Enum.GetValues(typeof(SiteLanguages))),
                     "Kullanıcı Türü Seçiniz", new { @class = "form-control", id = "SiteLanguage", @required = "required" })
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Bağlantılı Kuruluş Adı : </label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Adres : </label>
                            <div class="col-md-10">
                                <textarea class="form-control" rows="5" placeholder=""></textarea>
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Website : </label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-warning waves-effect waves-light">İptal Et</button>
                                <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
