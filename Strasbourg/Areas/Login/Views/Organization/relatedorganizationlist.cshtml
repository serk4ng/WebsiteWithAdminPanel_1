@using Strasbourg.Domain.ViewModels
@model IQueryable<RelatedOrganizationViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}


<br />
<!-- end page title -->

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <h2>Bağlantılı Kuruluş Listesi</h2>
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Bağlantılı Kuruluş Adı</th>
                        <th>Adres</th>
                        <th>Website</th>
                        <th>Dil</th>
                        <th style="width: 100px !important;">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Adress</td>
                            <td>@item.Website</td>
                            <td>@item.SiteLanguage</td>
                            <td>
                                @Html.ActionLink("İncele", "RelatedOrganizationDetail", "Organization", new { id = item.Id, type = "onlydetail" }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                @Html.ActionLink("Düzenle", "RelatedOrganizationDetail", "Organization", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                @Html.ActionLink("Sil", "RelatedOrganizationDelete", "Organization", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

