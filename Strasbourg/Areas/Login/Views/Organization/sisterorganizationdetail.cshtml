@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.SisterOrganizationViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}



<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("SisterOrganizationSave", "Organization", FormMethod.Post, new { @class = "form-horizontal" }))
                    {

                        <h3>Kardeş Kuruluş Detayı</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Kuruluş Adı
                                        </button>
                                    </span>

                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "Name", @required = "required" })

                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Adres
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", id = "Adress", @required = "required" })

                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Website
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Website, new { @class = "form-control", id = "Website", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Kuruluş Yılı
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.EstablishmentYear, new { @class = "form-control", id = "EstablishmentYear", @required = "required" })

                                </div>
                            </div>

                        </div>

                        <br />
                        if (@ViewBag.incele == null)
                        {
                            <button type="submit" class="btn btn-success waves-effect width-md waves-light">Kaydet</button>
                        }
                        else
                        {
                            <script>
                                document.getElementById("Name").readOnly = true;
                                document.getElementById("Adress").readOnly = true;
                                document.getElementById("Website").readOnly = true;
                                document.getElementById("EstablishmentYear").readOnly = true;
                            </script>
                        }

                    }
                    </div>
            </div>
        </div>
    </div>
</div>