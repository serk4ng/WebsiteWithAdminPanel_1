@using Strasbourg.Domain.ViewModels
@model IQueryable<SisterOrganizationViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}


<div class="container-fluid">

    <br />
    <!-- end page title -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h2>Kardeş Kuruluş Listesi</h2>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kardeş Kuruluş Adı</th>
                            <th>Adres</th>
                            <th>Site</th>
                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Adress</td>
                                <td>@item.Website</td>
                                <td>
                                    @Html.ActionLink("İncele", "SisterOrganizationDetail", "Organization", new { id = item.Id, type = "onlydetail" }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                    @Html.ActionLink("Düzenle", "SisterOrganizationDetail", "Organization", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                    @Html.ActionLink("Sil", "SisterOrganizationDelete", "Organization", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })

                                </td>
                            </tr>
                        }
                    </tbody>
                
                </table>
            </div>
        </div>
    </div>

</div>
