@using Strasbourg.Domain.Enums
@using Strasbourg.Domain.ViewModels

@model PublicationViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h2>Yayın Ekle</h2>
            <hr />
            <div class="row">
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)

                </div>

                <div class="col-lg-12">
                    @using (Html.BeginForm("PublicationSave", "Publication", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Dil: </label>
                            <div class="col-md-10">
                                @Html.DropDownList("SiteLanguage",
EnumHelper.GetSelectList(typeof(SiteLanguages)),
"Dil Seçiniz",
new { @class = "form-control" })
                            </div>
                        </div>

 
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Yayın Adı: </label>
                            <div class="col-md-10">

                                <input type="text" name="Name" class="form-control" id="Name" required="required" />
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Açıklama : </label>
                            <div class="col-md-10">

                                <input type="text" name="Description" class="form-control" id="Description" required="required" />
                            </div>
                        </div>


                        <hr>
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Yayın Resmi: </label>
                            <div class="col-md-10">
                                <input type="file" class="dropify" name="Image" />
                            </div>
                        </div>


                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                            </div>
                        </div>

                    }
                </div>

            </div>

        </div>
    </div>
</div>

