@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.PublicationViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("PublicationSave", "Publication", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {

                        <h3>Yayın Detayı</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="        width: 150px !important;">
                                            Dil
                                        </button>
                                    </span>
                                    @Html.DropDownListFor(x => x.SiteLanguage,
                   new SelectList(Enum.GetValues(typeof(SiteLanguages))),
                   "Dil Seçiniz", new { @class = "form-control", id = "SiteLanguage", @required = "required", Name = "SiteLanguage" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Yayın Adı
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "Name", @required = "required" })


                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 150px !important;">
                                            Açıklama
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", id = "Description", @required = "required" })

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 217px !important;">
                                            Resim
                                        </button>
                                        <input type="file" class="dropify" data-default-file="@ViewBag.Image" name="Image" />
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br />
                    
                            <button type="submit" class="btn btn-success waves-effect width-md waves-light">Kaydet</button>
                       
     

                    }
                </div>




            </div>


        </div>

    </div>
</div>

