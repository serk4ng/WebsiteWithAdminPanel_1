@using Strasbourg.Domain.ViewModels
@model IQueryable<PublicationViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<div class="container-fluid">

    <br />
    <!-- end page title -->


    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h2>Yayın Listesi</h2>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Yayın Adı</th>
                            <th>Resim</th>
                            <th>Dil</th>
                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td style="text-align: center !important;"> <img src="@item.Image" alt="image" class="img-fluid avatar-md" /></td>
                                <td>@item.SiteLanguage</td>
                                <td>
                                    @Html.ActionLink("İncele", "PublicationDetail", "Publication", new { id = item.Id }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                   
                                    @Html.ActionLink("Sil", "PublicationDelete", "Publication", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>

