@using Strasbourg.Domain.ViewModels
@model IQueryable<SMSTemplatesViewModel>

@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<div class="container-fluid">

    <br />
    <!-- end page title -->


    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h2>SMS Şablon Listesi</h2><br />
                <a href="@Url.Action("SMSTemplateDetail", "SMS")"><button class="btn btn-primary">Şablon Ekle</button></a>
                <br /><br />
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Dil</th>
                            <th>Konu</th>
                            <th>Mesaj</th>

                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SiteLanguage</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>

                                <td>
                                    @Html.ActionLink("İncele", "SMSTemplateDetail", "SMS", new { id = item.Id }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })

                                    @Html.ActionLink("Sil", "SMSTemplateDelete", "SMS", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>

