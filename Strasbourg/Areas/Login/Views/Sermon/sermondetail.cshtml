@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.SermonViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">

            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("SermonSave", "Sermon", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {

                        <h3>Hutbe Detayı</h3>

                        <div class="row">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 100px !important;">
                                            Dil
                                        </button>
                                    </span>
                                    @Html.DropDownListFor(x => x.SiteLanguage,
                   new SelectList(Enum.GetValues(typeof(SiteLanguages))),
                   "Dil Seçiniz", new { @class = "form-control", id = "SiteLanguage", @required = "required" })


                                </div>
                            </div>

                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 100px !important;">
                                            Başlık
                                        </button>
                                    </span>
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", id = "Title", @required = "required" })

                                </div>
                            </div>
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 100px !important;">
                                            İçerik
                                        </button>
                                    </span>
                                    @Html.TextAreaFor(x => x.Content, new { @class = "form-control", id = "Content", @required = "required", rows = "30" })


                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col col-lg-12">
                                <div class="input-group mt-3">
                                    <span class="input-group-append">
                                        <button type="button"
                                                class="btn waves-effect waves-light btn-primary" style="width: 130px !important;">
                                            Hutbe Resmi
                                        </button>
                                        <input type="file" class="dropify" data-default-file="@ViewBag.Image" name="Image" />
                                    </span>




                                </div>
                            </div>


                        </div>



                        <br />
                        if (@ViewBag.incele == null)
                        {
                            <button type="submit" class="btn btn-success waves-effect width-md waves-light">Kaydet</button>
                        }
                        else
                        {
                            <script>
                                document.getElementById("Title").readOnly = true;
                                document.getElementById("Content").readOnly = true;
                                document.getElementById("SiteLanguage").disabled = true;

                            </script>
                        }
                    }
                </div>




            </div>


        </div>

    </div>
</div>

