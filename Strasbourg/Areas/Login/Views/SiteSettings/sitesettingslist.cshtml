@using Strasbourg.Domain.ViewModels
@model IQueryable<SiteSettingsViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <h2>Site Ayarları</h2>
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>Dil</th>
              
                        <th style="width: 100px !important;">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SiteLanguage</td>
                
                            <td>
                                @Html.ActionLink("Düzenle", "Index", "SiteSettings", new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


