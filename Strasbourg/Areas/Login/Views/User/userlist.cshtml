@using Strasbourg.Domain.ViewModels
@model IQueryable<UsersViewModel>
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<div class="container-fluid">

    <br />
    <!-- end page title -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Unvan</th>
                            <th>Kullanıcı Tipi</th>
                            <th style="width: 100px !important;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Email</td>
                                <td>@item.Degree</td>
                                <td>@item.UserType</td>
                                <td>
                                    @Html.ActionLink("İncele", "UserDetail", "User", new { id = item.Id, type = "asd" }, new { @class = "btn btn-info waves-effect btn waves-light fa fa-info-circle fas fa-info-circle" })
                                    @Html.ActionLink("Düzenle", "UserDetail", "User",new { id = item.Id }, new { @class = "btn btn-success waves-effect btn waves-light fa fa-info-circle fas fas fa-edit" })
                                    @Html.ActionLink("Sil", "Delete", "User", new { id = item.Id }, new { @class = "btn btn-danger btn-info waves-effect btn waves-light fa fa-info-circle fas fa-trash-alt" })

                                </td>
                            </tr>
                        }
                    </tbody>
             
                </table>
            </div>
        </div>
    </div>

</div>

