@using Strasbourg.Domain.Enums
@model Strasbourg.Domain.ViewModels.VideoViewModel
@{
    ViewBag.Title = "Panel | Ditib Strasbourg";
    Layout = "~/Areas/Login/Views/Shared/panel_layout.cshtml";
}

<br />
<!-- end page title -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h2>Video Ekle</h2>
            <hr />
            <div class="row">
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id)
                </div>

                <div class="col-lg-12">
                    @using (Html.BeginForm("VideoSave", "Video", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Dil: </label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(x => x.SiteLanguage,
                   new SelectList(Enum.GetValues(typeof(SiteLanguages))),
                   "Dil Seçiniz", new { @class = "form-control", id = "SiteLanguage", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Video Başlığı: </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", id = "Title", @required = "required" })
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <label class="col-md-2 control-label">Url : </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.Url, new { @class = "form-control", id = "Url", @required = "required" })
                            </div>
                        </div>


                        <hr>
                        <div class="form-group row">
                            <label class="col-md-2 control-label">Thumbnail: </label>
                            <div class="col-md-10">
                                <input type="file" class="dropify" name="Thumbnail" />
                            </div>
                        </div>


                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-warning waves-effect waves-light">İptal Et</button>
                                <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                            </div>
                        </div>

                    }
                </div>

            </div>

        </div>
    </div>
</div>

