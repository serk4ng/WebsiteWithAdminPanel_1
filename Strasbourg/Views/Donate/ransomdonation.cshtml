
@{
    ViewBag.Title = "Ditib Strasbourg";

    Layout = "~/Views/Shared/strasbourg_layout.cshtml";
}

<div class="main-container container" id="main-container" style="background-color: #f6f9fb !important;">
    <!-- post content -->
    <div class="blog__content mb-72">

        <img src="~/Assets/strasbourgpanel/strasbourg/img/bannerzekat.svg">
        <div class="description">
            <h1>FONDS DE DOTATION DİTİB STRASBOURG</h1>
            <p>
                <span style="color: rgb(0, 0, 0); font-size: 11pt; line-height: 16.8667px; font-family: Calibri, sans-serif;">
                    DİTİB
                    Strasbourg&nbsp;Fidye Online Bağış Sistemi<br>DİTİB Strasbourg&nbsp;paiement en ligne de l’aumône
                    Al-Fitr
                </span>
            <p>
        </div>
        <div class="clearfix"></div>
        <hr />
        <div class="additional">
            <p>
                <div>
                    Association de droit local inscrite au TA de Strasbourg sous le volume 90 Folio 69 // sise : 3, Rue
                    Thomas Mann 67200 STRASBOURG.
                </div>
                <div>
                    Conditions de vente : Attention les licences vendues sur internet ne pourront faire l’objet d’aucun
                    remboursement ultérieur.&nbsp;
                </div>
            </p>
        </div>
        <div class="clearfix"></div>
        <hr />

        @using (Html.BeginForm("RansomDonationPost", "Donate", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="inputPassword4">Ad</label>
                    <input type="text" class="form-control" name="Name" id="name">
                </div>
                <div class="form-group col-lg-6">
                    <label for="inputPassword4">Soyad</label>
                    <input type="text" class="form-control" name="Surname" id="surname">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="inputEmail4">E-mail</label>
                    <input type="email" class="form-control" name="Email" required id="email">
                </div>
                <div class="form-group col-lg-6">
                    <label for="inputEmail4">Telefon</label>
                    <input type="tel" class="form-control" name="PhoneNumber" required id="phonenumber">
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="inputPassword4">Posta Kodu</label>
                    <input type="text" class="form-control" name="ZipCode" required id="zipcode">
                </div>
                <div class="form-group col-lg-6">
                    <label for="inputPassword4">Şehir</label>
                    <input type="text" class="form-control" name="City" required id="city">
                </div>
                <div class="form-group col-lg-6">
                    <label for="inputPassword4">Adres</label>
                    <input type="text" class="form-control" name="Adress" required id="adress">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="inputEmail4">Ek Bilgiler</label>
                    <textarea class="form-control" name="AdditionalInfo" required id="additionalinfo" rows="3"></textarea>
                </div>

            </div>

            <br />
            <div class="row">
                <div class="col col-lg-2">
                    <label for="zekatmiktari" style="margin-top: 15px !important;">Fidye Miktarı</label>
                </div>
                <div class="col col-lg-4" style="margin-left: -80px !important;">
                    <div class="row">
                        <div class="col col-lg-6">
                            <input type="number" id="ransomamount" name="RansomAmount" min="10" max="10000000">
                        </div>

                        <div class="col col-lg-2">
                            <h4 style="margin-top: 5px;">€</h4>
                        </div>
                    </div>

                </div>
            </div>

            <br />
            <button type="submit" class="btn btn-danger">Devam Et</button>
        }
        <br /><br />


    </div> <!-- end post content -->


</div> <!-- end main container -->


@if (Session["ransomdonationjson"] != null)
{


    @section ransomdonation{
        <script>
    document.getElementById("name").value =  "@Session["ransomdonationname"].ToString()";
    document.getElementById("surname").value = "@Session["ransomdonationsurname"].ToString()";
    document.getElementById("email").value = "@Session["ransomdonationemail"].ToString()";
    document.getElementById("adress").value = "@Session["ransomdonationadress"].ToString()";
    document.getElementById("city").value = "@Session["ransomdonationcity"].ToString()";
    document.getElementById("phonenumber").value = "@Session["ransomdonationphonenumber"].ToString()";
    document.getElementById("zipcode").value = "@Session["ransomdonationzipcode"].ToString()";
    document.getElementById("additionalinfo").value = "@Session["ransomdonationadditionalinfo"].ToString()";
    document.getElementById("ransomamount").value = "@Session["ransomdonationransomamount"].ToString()";
        </script>
    }
}