@using Strasbourg.Domain.ViewModels
@model NewsViewModel
@{
    ViewBag.Title = "Ditib Strasbourg";
    Layout = "~/Views/Shared/strasbourg_layout.cshtml";
}

<br />
<div class="main-container container" id="main-container">
    <!-- post content -->
    <div class="blog__content mb-72">

        <h1 class="page-title" style="text-align: center;">@Model.Title</h1>
        <p>@Model.CreationDate</p>

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <img  src="@Model.Image"/>
            </div>
            <div class="col-lg-12">
                <br />

                <!-- pre etiketi madde madde getirmek için  -->
                <div class="display-field">
                    <p style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;font-size:17px !important;">@Model.Content</p>
                </div>


                <br />

            </div>

        </div>


    </div> <!-- end post content -->


</div> <!-- end main container -->
